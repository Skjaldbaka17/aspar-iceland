<%- include('header') -%>

        <div class = "kynning">
            <h3>Welcome to Iceland</h3>
            <p>The island in the North. Home to many of the world's most magnificent
                waterfalls, glaciers and landscapes. Iceland heals, fights and inspires like no other.
            </p>
        </div>
            
            <div class = "greinar">
                    <% articles.forEach((article) => { %>
                            <a class="linkurAGrein" href=<%=article.href%>>
                                <% 
                                var classinn = (article.position%2 === 0) ? 'right' : 'left';
                                var textClassinn = (article.position%2 === 1) ? 'rightText' : 'leftText';
                                %>
                                <div class="one"></div>
                                <div class="two"></div>
                                <div class="three"></div>
                                <div class="<%=classinn%>">
                                    <% if (article.image) { %>
                                        <img src = "<%= article.image %>" alt="<%= article.title%>">
                                    <% } %>
                                </div>

                                <div class="<%=textClassinn%>">
                                    <div class="articleInfo">
                                            <div class="articleTitle">
                                                <h4><%= article.title%></h4>
                                            </div>
                                            <div class="articleDescription">
                                                <h5><%= article.description%></h5>
                                            </div>
                                            <div class="articleContent">
                                                <%- article.content%>
                                            </div>
                                    </div>
                                </div>
                              
                            </a>
                      <% }) %>
            </div>

<%- include('footer') -%>